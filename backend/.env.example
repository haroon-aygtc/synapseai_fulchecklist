# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/synapseai"

# JWT Configuration
JWT_SECRET="your-super-secure-jwt-secret-key-here-change-in-production"
JWT_EXPIRES_IN="24h"

# Redis Configuration
REDIS_HOST="localhost"
REDIS_PORT="6379"
REDIS_PASSWORD=""

# Email Configuration (SMTP)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_SECURE="false"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
SMTP_FROM_EMAIL="noreply@synapseai.com"

# Frontend URL
FRONTEND_URL="http://localhost:3000"

# API Configuration
PORT="3001"
NODE_ENV="development"

# Rate Limiting
THROTTLE_TTL="60000"
THROTTLE_LIMIT="100"

# Security
BCRYPT_SALT_ROUNDS="12"
SESSION_SECRET="your-session-secret-key-here"

# Monitoring
LOG_LEVEL="info"
ENABLE_CORS="true"

# Provider API Keys (Encrypted in database)
# These are examples - actual keys should be managed through the UI
OPENAI_API_KEY=""
CLAUDE_API_KEY=""
GEMINI_API_KEY=""